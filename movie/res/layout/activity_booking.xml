<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Booking" >

    <TextView
        android:id="@+id/i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cu"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
          android:textColor="#fff"
         android:textStyle="italic"
        android:layout_marginTop="34dp"
        android:text="moviid" />

    <TextView
        android:id="@+id/sho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="show"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/mov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sho"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="28dp"
        android:text="Movie"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/cu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mov"
        android:layout_alignLeft="@+id/mov"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="36dp"
        android:text="name of cus"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/mov"
        android:src="@drawable/cam" />

    <TextView
        android:id="@+id/pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sho"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/sho"
        android:layout_marginTop="15dp"
        android:text="position"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"
        android:textStyle="italic" />

    <Button
        android:id="@+id/create"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/pos"
        android:layout_marginBottom="38dp"
        android:background="@drawable/red_button"
        android:text="Finish Booking"
        android:textColor="#fff"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textColor="#fff"
        android:textStyle="italic" 
        android:layout_alignLeft="@+id/pos"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/pos"
        android:layout_marginTop="24dp"
        android:text="Cost"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>