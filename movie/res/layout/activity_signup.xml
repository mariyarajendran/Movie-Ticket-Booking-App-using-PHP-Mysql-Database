<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#795548"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Signup" >
    
       <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="816dp"
            android:orientation="vertical" >
        
    

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/flim" />

    <EditText
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="User Name"
        android:textStyle="italic" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/user"
        android:layout_marginTop="19dp"
       android:textColor="#fff"
        android:textColorHint="#fff"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pass"
        android:layout_alignParentRight="true"
        android:hint="Name"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textStyle="italic"
        android:layout_below="@+id/pass"
        android:layout_marginTop="20dp"
        android:ems="10" />

    <EditText
        android:id="@+id/mailid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_alignParentRight="true"
        android:hint="Mail Id"
          android:textColor="#fff"
        android:textColorHint="#fff"
        android:textStyle="italic"
        android:layout_below="@+id/name"
        android:layout_marginTop="23dp"
        android:ems="10" />

    <EditText
        android:id="@+id/phoneno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mailid"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mailid"
        android:hint="Phone Number"
         android:textColor="#fff"
         android:maxLength="10"
        android:textColorHint="#fff"
        android:textStyle="italic"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:inputType="phone" />

    <EditText
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/phoneno"
        android:layout_alignParentRight="true"
        android:hint="City"
          android:textColor="#fff"
        android:textColorHint="#fff"
        android:textStyle="italic"
        android:layout_below="@+id/phoneno"
        android:layout_marginTop="22dp"
        android:ems="10" />

    <Button
        android:id="@+id/signup"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/city"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/city"
        android:layout_marginTop="49dp"
        android:background="#dd2c00"
        android:text="Sign up"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/signup"
        android:layout_marginLeft="51dp"
        android:layout_toRightOf="@+id/imageView1"
        android:src="@drawable/popcorn" />

    </RelativeLayout>

     </ScrollView>

</RelativeLayout>
